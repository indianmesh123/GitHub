<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <LinearLayout
        android:id="@+id/lPhoneSupp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5594A"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lPhoneSupp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:text="Device Authentication Successful"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EC8379" />

        <LinearLayout
            android:id="@+id/lPhoneSupp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <Button
                android:id="@+id/btnCancel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="OK"
                android:textColor="#4DCDC0" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>