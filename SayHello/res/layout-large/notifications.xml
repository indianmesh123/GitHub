<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"   
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="100"
    android:background="#F6F6F6">
     <RelativeLayout
        android:id="@+id/lNotification"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/topbar" >

        <ImageView
            android:id="@+id/nimgBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/backicon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/textNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Notification"
            android:textColor="#fff"
            android:textStyle="bold" />
    </RelativeLayout>
	<LinearLayout 
	    android:id="@+id/lNotification2"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10"
	    android:orientation="vertical">	    
	</LinearLayout>
	<View 
	    android:id="@+id/view"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray"/>
	<RelativeLayout 
	    android:id="@+id/lNotification3"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10"
	    android:orientation="horizontal"
	    android:background="#fff"
	    android:gravity="center_vertical"
	  >
	    <TextView 
	        android:id="@+id/textLocServices"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Location Services"
	        android:textColor="#000"
	        android:paddingLeft="20dp"
	        android:textSize="16dp"/>
	     <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn="" />
	</RelativeLayout>
	<View 
	    android:id="@+id/view1"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray"/>
		<RelativeLayout 
	    android:id="@+id/lNotification4"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10"
	    android:orientation="horizontal"
	    android:background="#fff"
	    android:gravity="center_vertical">
	    <TextView 
	        android:id="@+id/textVibrate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Vibrate"
	        android:textSize="16dp"
	        android:textColor="#000"
	        android:paddingLeft="20dp"/>
	     <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:layout_alignParentRight="true"
        
        android:layout_marginRight="20dp"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn="" />
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/lNotification5"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10"
	    android:orientation="vertical">	    
	</LinearLayout>
	<View 
	    android:id="@+id/view2"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray"/>
	<RelativeLayout 
	    android:id="@+id/lNotification6"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10"
	    android:orientation="horizontal"
	    android:background="#fff"
	    android:gravity="center_vertical">
	    <TextView 
	        android:id="@+id/textAudio"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Audio"
	        android:textSize="16dp"
	        android:textColor="#000"
	        android:paddingLeft="20dp"/>
	     <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn="" />
	</RelativeLayout>
	<View 
	    android:id="@+id/view3"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray"/>
	<RelativeLayout 
	    android:id="@+id/lNotification7"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10"
	    android:orientation="horizontal"
	    android:background="#fff"
	    android:gravity="center_vertical">
	    <TextView 
	        android:id="@+id/textAppStatus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="App Status"
	        android:textSize="16dp"
	        android:textColor="#000"
	        android:paddingLeft="20dp"/>
	     <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn="" />
	</RelativeLayout>
	<View 
	    android:id="@+id/view4"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray"/>
		<RelativeLayout 
	    android:id="@+id/lNotification8"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10"
	    android:orientation="horizontal"
	    android:background="#fff"
	    android:gravity="center_vertical">
	    <TextView 
	        android:id="@+id/textPasswordLock"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Password Lock"
	        android:textSize="16dp"
	        android:textColor="#000"
	        android:paddingLeft="20dp"/>
	     <ToggleButton
        android:id="@+id/toggleButton5"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn="" />
	</RelativeLayout>
	<View 
	    android:id="@+id/view5"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray"/>
	<LinearLayout 
	    android:id="@+id/lNotification9"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10"
	    android:orientation="vertical">	    
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/lNotification10"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="7"
	    android:orientation="vertical">	 
	      <ImageView
                android:id="@+id/imgBottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logo_bottom"
                />   
	</LinearLayout>
	
</LinearLayout>
<ImageView 
    android:id="@+id/imgSide"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/usericon"
    android:layout_marginRight="10dp"
    android:layout_marginTop="4dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"/>
</RelativeLayout>