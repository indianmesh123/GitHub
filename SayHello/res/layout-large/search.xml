<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"   
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    android:weightSum="100" >
  <RelativeLayout
        android:id="@+id/lSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"        
      >
    <RelativeLayout
        android:id="@+id/lSearch1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/topbar" >

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" 
            android:background="@drawable/backicon"/>

        <TextView
            android:id="@+id/textSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Search"
            android:textColor="#fff"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/lSearch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal"
        android:layout_below="@id/lSearch1"
        android:weightSum="100"
        >
        <LinearLayout 
            android:id="@+id/lSearch3"
            android:layout_weight="18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView 
                android:id="@+id/imgeditactivity"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_edit_mv_active"/>
        </LinearLayout>
          <LinearLayout 
            android:id="@+id/lSearch4"
            android:layout_weight="16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/imgeditactivity1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/iconcoffeeclick"/>
            <TextView 
                android:id="@+id/textCoffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"/>
        </LinearLayout>
          <LinearLayout 
            android:id="@+id/lSearch5"
            android:layout_weight="16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/imgeditactivity2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/iconcoffeeclick"/>
              <TextView 
                android:id="@+id/textCoffee1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"/>
        </LinearLayout>
          <LinearLayout 
            android:id="@+id/lSearch6"
            android:layout_weight="16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/imgeditactivity3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/iconcoffeeclick"/>
              <TextView 
                android:id="@+id/textCoffee2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"/>
        </LinearLayout>
          <LinearLayout 
            android:id="@+id/lSearch7"
            android:layout_weight="16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/imgeditactivity4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/iconcoffeeclick"/>
              <TextView 
                android:id="@+id/textCoffee3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"/>
        </LinearLayout>
          <LinearLayout 
            android:id="@+id/lSearch8"
            android:layout_weight="16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/imgeditactivity5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/iconcoffeeclick"/>
              <TextView 
                android:id="@+id/textCoffee4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"/>
        </LinearLayout>          
    </LinearLayout>
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/lSearch9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="100">

        <ImageView
            android:id="@+id/imgMap"
            android:layout_width="300dp"
            android:layout_height="300dp" 
            android:background="@drawable/map"/>
	  </LinearLayout>
   	  <LinearLayout 
        android:id="@+id/lSearch11"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        	<LinearLayout 
		    android:id="@+id/lSearch10"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:weightSum="100"
		 >
		    <ImageView 
		        android:id="@+id/imgLeft"
		        android:layout_width="0dp"
		        android:layout_height="35dp"
		        android:layout_weight="40"
		        android:layout_gravity="bottom"
		        android:background="@drawable/btn_mv_active"/>
		    <ImageView 
		        android:id="@+id/imgCentre"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="20"
		        android:background="@drawable/btn_refresh_active"/>
		      <ImageView 
		        android:id="@+id/imgRight"
		        android:layout_width="0dp"
		        android:layout_height="35dp"
		        android:layout_weight="40"
		        android:layout_gravity="bottom"
		        android:background="@drawable/btn_list_view_active"/>
		</LinearLayout>
		
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/bottomline"/>
  
</LinearLayout>
<ImageView 
    android:id="@+id/imgSide"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/usericon"
    android:layout_marginRight="10dp"
    android:layout_marginTop="7dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"/>
</RelativeLayout>